@{
	ViewData["Title"] = "Manager Word";
}

@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<TblWord>

@* <a asp-action="editWord" >Create</a> *@
<div class="container1">
    <div class="column1">
        <div class="row1">
            <label class="lb1">Language : </label>
            <select style="width: 168px;" id="selectLanguage1">
            </select>
        </div>
        <div class="row1">
            <label class="lb">IdWordType : </label>
            <select style="width: 175px;" id="WordTypes">
                <option value="disable" disabled selected>Chọn IDWordType</option>
                <option value="1">Động từ</option>
                <option value="2">Danh từ</option>
                <option value="3">Tính từ</option>
                <option value="4">Trạng từ</option>
            </select>
        </div>
        <div class="row1">
            <label class="lb1">Word : </label>
            <input type="text" id="Word" placeholder="Nhập từ thêm ...">
        </div>
        <div class="row1">
            <label class="lb1">Definition : </label>
            <input type="text" id="Definition" placeholder="Definition ...">
        </div>
    </div>
    <div class="column1">
        <div class="row1">
            <label class="lb">Language trans : </label>
            <select style="width: 142px;" id="selectLanguageTran1">

            </select>
        </div>
        <div class="row1">
            <label class="lb">Id_user : </label>
            <input type="text" id="Id_user" placeholder="Nhập Id_user...">
        </div>
        <div class="row1">
            <label class="lb">Example : </label>
            <input type="text" id="Example" placeholder="Example ...">
        </div>
        <div class="row1">
            <labal>Wordtrans</labal>
            <input type="text" id="WordTrans" placeholder="Nhập Wordtrans ...">
        </div>
    </div>
</div>
<div>
    <div class="button">
        <button id="btnAdd" onclick="dataword()">Add</button>
    </div>
</div>

<form asp-action="Index" asp-controller="Manager" method="post">
    <div class="searchword">
        <input type="text" name="id" placeholder="Nhập từ mà bạn muốn tìm kiếm ..." />
        <input type="submit" value="search" />
    </div>
    <div class="relative flex flex-col w-full h-full overflow-scroll text-gray-700 bg-white shadow-md bg-clip-border rounded-xl">
        <table class="w-full text-left table-auto min-w-max">
            <thead>
                <tr>
                    <th class="p-4 border-b border-blue-gray-100 bg-blue-gray-50">
                        <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70">
                            ID
                        </p>
                    </th>
                    <th class="p-4 border-b border-blue-gray-100 bg-blue-gray-50">
                        <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70">
                            Language
                        </p>
                    </th>
                    <th class="p-4 border-b border-blue-gray-100 bg-blue-gray-50">
                        <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70">
                            LanguageTrans
                        </p>
                    </th>
                    <th class="p-4 border-b border-blue-gray-100 bg-blue-gray-50">
                        <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70">
                            Wordtypes
                        </p>
                    </th>
                    <th class="p-4 border-b border-blue-gray-100 bg-blue-gray-50">
                        <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70">
                            ID_User
                        </p>
                    </th>
                    <th class="p-4 border-b border-blue-gray-100 bg-blue-gray-50">
                        <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70">
                            Word
                        </p>
                    </th>
                    <th class="p-4 border-b border-blue-gray-100 bg-blue-gray-50">
                        <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70">
                            Example
                        </p>
                    </th>
                    <th class="p-4 border-b border-blue-gray-100 bg-blue-gray-50">
                        <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70">
                            Definition
                        </p>
                    </th>
                    <th class="p-4 border-b border-blue-gray-100 bg-blue-gray-50">
                        <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70">
                            WordTrans
                        </p>
                    </th>
                    <th class="p-4 border-b border-blue-gray-100 bg-blue-gray-50">
                        <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70"></p>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count >0)
                {
                    @foreach (TblWord w in Model)
                    {
                        <tr class="even:bg-blue-gray-50/50">
                            <td class="p-4">
                                <p class="block font-sans text-sm antialiased font-normal leading-normal text-blue-gray-900" id="id">
                                    @w.Id
                                </p>
                            </td>
                            <td class="p-4">
                                <p class="block font-sans text-sm antialiased font-normal leading-normal text-blue-gray-900" id="language">
                                    @w.IdLanguage
                                </p>
                            </td>
                            <td class="p-4">
                                <p class="block font-sans text-sm antialiased font-normal leading-normal text-blue-gray-900" id="languageTrans">
                                    @w.IdLanguageTrans
                                </p>
                            </td>
                            <td class="p-4">
                                <p class="block font-sans text-sm antialiased font-normal leading-normal text-blue-gray-900" id="wordtypes">
                                    @w.IdWordtype
                                </p>
                            </td>
                            <td class="p-4">
                                <p class="block font-sans text-sm antialiased font-normal leading-normal text-blue-gray-900" id="idUser">
                                    @w.IdUser
                                </p>
                            </td>
                            <td class="p-4">
                                <p class="block font-sans text-sm antialiased font-normal leading-normal text-blue-gray-900" id="word">
                                    @w.SWord
                                </p>
                            </td>
                            <td class="p-4">
                                <p class="block font-sans text-sm antialiased font-normal leading-normal text-blue-gray-900" id="example">
                                    @w.SExample
                                </p>
                            </td>
                            <td class="p-4">
                                <p class="block font-sans text-sm antialiased font-normal leading-normal text-blue-gray-900" id="definition">
                                    @w.SDefinition
                                </p>
                            </td>
                            <td class="p-4">
                                <p class="block font-sans text-sm antialiased font-normal leading-normal text-blue-gray-900" id="wordTrans">
                                    @w.sWordTrans
                                </p>
                            </td>
                            <td class="p-4">
                                <a onclick="getWordById(event,@w.Id)" id="edit" class="cursor-pointer font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                                <a onclick="deleteWord(@w.Id)" class="cursor-pointer font-medium text-blue-600 dark:text-blue-500 hover:underline">Delete</a>
                            </td>
                        </tr>
                    }
                }

                @if (Model.Count == 0)
                {
                    <tr class="h-[300px]">
                        <td colspan="4" class="text-center font-[500] text-[20px]">Không có từ nào trong cơ sở dữ liệu</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
<script >

    
</script>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))